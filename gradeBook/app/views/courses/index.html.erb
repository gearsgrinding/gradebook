<table>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Teacher Id</th>
      <% puts current_user.role %>
      <% if current_user.admin? %>
      <th>Average Grade</th>
      <th>Subscribers</th>
     	<% elsif current_user.teacher? %>
     	<th>Subscribers</th>
     	<% elsif current_user.student? %>
     	<th>Test</th>
     	<%end%>
    </tr>

<tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.teacher_id %></td>

        <% if current_user.admin? %>
        <td> <%= course.average_grade %> </td>
      	<td><%= course.subscription_count %></td>
     		<% elsif current_user.teacher? %>
     		<td><%= course.subscription_count %></td>
     		<%end%>
      </tr>
    <% end %>
  </tbody>

</table>